@model IEnumerable<NursaceMVC.Models.Client>

<h2>Список клиентов:</h2>
    <p><a asp-controller="Client" asp-action="CreateClient">Добавить клиента</a></p>
<table class="table">
     <tr>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Страна</th>
        <th>Город</th>
        <th>Транспортная компания</th>
        <th>Телефон</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Country</td>
            <td>@item.City</td>
            <td>@item.Cargo</td>
            <td>@item.Tel</td>
            <td><a asp-controller="Client" asp-action="EditClient" asp-route-id="@item.Id">Изменить</a></td>
            <td>
                <form asp-action="DeleteClient" asp-controller="Client" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>